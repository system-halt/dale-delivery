---
import ServiceCard from './ui/ServiceCard.astro';
import PlansCard from './ui/PlansCard.astro';
---

<section id="servicios" class="py-12 sm:py-16 lg:py-20 bg-gray-50">
    <div class="w-full px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">

            <!-- Layout de dos columnas -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">

                <!-- Columna Izquierda: Texto + ServiceCards -->
                <div class="flex flex-col">
                    <!-- Header con texto - con padding extra arriba para evitar superposición -->
                    <div class="text-center lg:text-left mb-32 sm:mb-32 pt-8">
                        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold text-primary-500 mb-4">
                            Nuestros servicios
                        </h2>
                        <p class="text-gray-600 text-lg lg:text-xl max-w-2xl">
                            Soluciones de entrega rápidas y confiables adaptadas a tus necesidades específicas
                        </p>
                    </div>

                    <!-- ServiceCards en fila horizontal (1-1) - con espacio adicional para móvil -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-20 sm:gap-4 lg:gap-6 relative z-10">
                        <!-- Same Day Card -->
                        <div class="transform hover:scale-[1.02] transition-all duration-300 mb-20 sm:mb-0">
                            <ServiceCard
                                    title="SAME DAY"
                                    subtitle="¿Tienes prisa?"
                                    description="Con nuestro servicio exprés, recogemos y entregamos tu paquete el mismo día. Rápido, seguro y sin complicaciones."
                                    bgColor="bg-header-gradient to-primary-600"
                                    imageBg="/same-day.jpg"

                            />
                        </div>

                        <!-- Next Day Card -->
                        <div class="transform hover:scale-[1.02] transition-all duration-300">
                            <ServiceCard
                                    title="NEXT DAY"
                                    subtitle="Planifica con tranquilidad."
                                    description="Recogemos hoy y entregamos mañana, manteniendo la seguridad y puntualidad que nos caracteriza, a un precio más conveniente."
                                    bgColor="bg-header-gradient to-blue-600"
                                    imageBg="/next-day.jpg"

                            />
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha: PlansCard -->
                <div class="flex items-stretch">
                    <div class=" w-full transform hover:scale-[1.02] transition-all duration-300">
                        <PlansCard
                                title="PLANES DE ENVÍOS PREPAGO"
                                subtitle="Obtén hasta el 25% de descuento pagando por adelantado."
                                plans={[
                                    'Plan Start 10',
                                    'Plan Crece 20',
                                    'Plan Pro 50',
                                    'Plan Elite 100',
                                    'Plan Ultra 200'
                                ]}
                                footerText="Precios desde S/7.50 soles"
                                imageSrc="plancard.jpg"
                                imageAlt="Repartidor con paquetes"
                        />
                        <br>
                        <p class="text-gray-600 text-lg lg:text-xl max-w-2xl">
                            Planes flexibles de prepago con descuentos exclusivos.
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>