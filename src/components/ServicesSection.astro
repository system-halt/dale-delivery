---
import ServiceCard from './ui/ServiceCard.astro';
import PlansCard from './ui/PlansCard.astro';
---

<section id="servicios" class="py-12 sm:py-16 lg:py-20 bg-gray-50">
    <div class="w-full px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-56 text-center lg:text-left">
            <h2 class="text-3xl sm:text-4xl lg:text-6xl font-display font-bold text-primary-500 mb-4">
                Nuestros servicios
            </h2>
        </div>
        <!-- Services Grid with proper spacing for new card dimensions -->
        <div class="max-w-7xl mx-auto lg:ml-120 lg:mr-auto ">

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8 items-stretch">
                <!-- Same Day Card -->
                <ServiceCard
                        title="SAME DAY"
                        subtitle="¿Tienes prisa?"
                        description="Con nuestro servicio exprés, recogemos y entregamos tu paquete el mismo día. Rápido, seguro y sin complicaciones."
                        bgColor="from-primary-500 to-primary-600"
                        imageBg="background-inicio.jpg"
                        imageOverlay="same-day-back.png"
                        imageOverlayAlt="Persona con paquete para entrega same day"
                />

                <!-- Next Day Card -->
                <ServiceCard
                        title="NEXT DAY"
                        subtitle="Planifica con tranquilidad."
                        description="Recogemos hoy y entregamos mañana, manteniendo la seguridad y puntualidad que nos caracteriza, a un precio más conveniente."
                        bgColor="from-primary-500 to-primary-600"
                        imageBg="background-inicio.jpg"
                        imageOverlay="same-day-back.png"
                        imageOverlayAlt="Persona con paquete para entrega same day"
                />

                <!-- Plans Card -->
                <PlansCard
                        title="PLANES DE ENVÍOS PREPAGO"
                        subtitle="Obtén hasta el 25% de descuento pagando por adelantado."
                        plans={[
                            'Plan Start 10',
                            'Plan Crece 20',
                            'Plan Pro 50',
                            'Plan Elite 100',
                            'Plan Ultra 200'
                        ]}
                        footerText="Precios desde S/7.50 soles"
                        imageSrc="same-day-back.png"
                        imageAlt="Repartidor con paquetes"
                />
            </div>
        </div>
    </div>
</section>