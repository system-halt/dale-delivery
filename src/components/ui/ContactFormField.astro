---
export interface Props {
    name?: string;
    label: string;
    type?: string;
    placeholder: string;
    required?: boolean;
    options?: string[];
}

const { name, label, type = "text", placeholder, required = false, options } = Astro.props;
---

<div class="form-field">
    <label class="form-label">
        {label}
        {!required && <span class="optional">(opcional)</span>}
    </label>

    {type === "select" ? (
            <select name={name} class="form-input" required={required}>
                {options?.map(option => (
                        <option value={option}>{option}</option>
                ))}
            </select>
    ) : type === "phone" ? (
            <div class="phone-input-group">
                <select class="country-select">
                    <option value="+51">Per√∫ (+51)</option>
                </select>
                <input
                        type="tel"
                        name={name}
                        class="form-input phone-input"
                        placeholder={placeholder}
                        required={required}
                />
            </div>
    ) : (
            <input
                    type={type}
                    name={name}
                    class="form-input"
                    placeholder={placeholder}
                    required={required}
            />
    )}
</div>

<style>
    .form-field {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.5rem;
    }

    .optional {
        font-weight: 400;
        color: #6b7280;
        margin-left: 0.25rem;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border-radius: 0.75rem;
        border: 1px solid #d1d5db;
        font-size: 0.875rem;
        transition: all 0.2s ease;
        background: white;
    }

    .form-input:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .phone-input-group {
        display: flex;
        gap: 0;
    }

    .country-select {
        padding: 0.75rem 0.5rem;
        border-radius: 0.75rem 0 0 0.75rem;
        border: 1px solid #d1d5db;
        border-right: none;
        background: #f9fafb;
        color: #6b7280;
        font-size: 0.875rem;
        flex-shrink: 0;
    }

    .phone-input {
        border-radius: 0 0.75rem 0.75rem 0;
        flex: 1;
    }

    @media (min-width: 640px) {
        .form-input {
            padding: 1rem 1.25rem;
            border-radius: 1rem;
            font-size: 1rem;
        }

        .country-select {
            padding: 1rem 0.75rem;
            border-radius: 1rem 0 0 1rem;
        }

        .phone-input {
            border-radius: 0 1rem 1rem 0;
        }
    }
</style>