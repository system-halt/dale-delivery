---
export interface Props {
    title: string;
    subtitle: string;
    plans: string[];
    footerText: string;
    imageSrc: string;
    imageAlt: string;
}

const { title, subtitle, plans, footerText, imageSrc, imageAlt } = Astro.props;
---

<div class="relative bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 h-6/12">
    <!-- Layout horizontal como en la imagen -->
    <div class="flex h-full">
        <!-- Left Side - Content (2/3 width) -->
        <div class="flex flex-col w-2/3">
            <!-- Header Section with Orange Background -->
            <div class="bg-gradient-to-r from-orange-500 to-orange-600 p-6 lg:p-8 text-white flex-shrink-0">
                <h3 class="text-xl lg:text-2xl xl:text-3xl font-display font-bold mb-3 leading-tight">
                    {title}
                </h3>
                <p class="text-sm lg:text-base opacity-95 leading-relaxed">
                    {subtitle}
                </p>
            </div>

            <!-- Plans Section with Blue Background -->
            <div class="bg-gradient-to-br from-blue-600 to-blue-700 px-6 lg:px-8 py-6 text-white flex-grow">
                <div class="space-y-3">
                    {plans.map(plan => (
                            <div class="flex items-center space-x-3">
                                <svg class="w-5 h-5 lg:w-6 lg:h-6 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-base lg:text-lg font-medium italic">{plan}</span>
                            </div>
                    ))}
                </div>
            </div>

            <!-- Footer Section with Orange Background -->
            <div class="bg-gradient-to-r from-orange-500 to-orange-600 px-6 lg:px-8 py-4 text-white flex-shrink-0">
                <p class="text-sm lg:text-base font-bold">
                    {footerText}
                </p>
            </div>
        </div>

        <!-- Right Side - Image (1/3 width) -->
        <div class="w-1/3 relative overflow-hidden">
            <img
                    src={imageSrc}
                    alt={imageAlt}
                    class="w-full h-full object-cover object-center"
                    loading="lazy"
            />
            <!-- Gradiente sutil para mejor integraciÃ³n -->
            <div class="absolute inset-0 bg-gradient-to-l from-transparent to-black/5 pointer-events-none"></div>
        </div>
    </div>
</div>