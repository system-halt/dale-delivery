---
export interface Props {
    title: string;
    subtitle: string;
    iconSrc: string;
    iconAlt: string;
}

const { title, subtitle, iconSrc, iconAlt } = Astro.props;
---

<div class="benefit-card">
    <!-- Card Container -->
    <div class="card-container">
        <!-- Title Above Icon -->
        <h3 class="benefit-title">{title}</h3>

        <!-- Icon Section -->
        <div class="icon-container">
            <img
                    src={iconSrc}
                    alt={iconAlt}
                    class="benefit-icon"
                    loading="lazy"
            />
        </div>

        <!-- Check Mark -->
        <div class="check-mark">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="12" cy="12" r="10" fill="#2563eb"/>
                <path d="M9 12l2 2 4-4" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </div>
    </div>

    <!-- Text Content -->
    <div class="text-content">
        <p class="benefit-subtitle">{subtitle}</p>
    </div>
</div>

<style>
    .benefit-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 280px;
        margin: 0 auto;
        padding: 1rem;
        transition: transform 0.3s ease;
    }

    .benefit-card:hover {
        transform: translateY(-4px);
    }

    .card-container {
        position: relative;
        background: white;
        border-radius: 20px;
        padding: 1.5rem 1.5rem 3rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 1.5rem;
        width: 100%;
        min-height: 160px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: 2px solid #f1f5f9;
        transition: all 0.3s ease;
        gap: 1rem;
    }

    .card-container:hover {
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        border-color: #e2e8f0;
    }

    .benefit-title {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1e293b;
        margin: 0;
        line-height: 1.3;
        text-align: center;
    }

    .icon-container {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 80px;
        height: 80px;
    }

    .benefit-icon {
        width: 100%;
        height: 100%;
        object-fit: contain;
        filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.1));
    }

    .check-mark {
        position: absolute;
        bottom: -12px;
        left: 50%;
        transform: translateX(-50%);
        width: 32px;
        height: 32px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        border: 2px solid #f8fafc;
    }

    .check-mark svg {
        width: 24px;
        height: 24px;
    }

    .text-content {
        text-align: center;
        max-width: 100%;
    }

    .benefit-subtitle {
        font-size: 0.875rem;
        color: #64748b;
        line-height: 1.5;
        margin: 0;
        font-weight: 400;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .benefit-card {
            max-width: 240px;
            padding: 0.75rem;
        }

        .card-container {
            padding: 1.25rem 1rem 2.5rem;
            min-height: 140px;
        }

        .icon-container {
            width: 60px;
            height: 60px;
        }

        .benefit-title {
            font-size: 1rem;
        }

        .benefit-subtitle {
            font-size: 0.8125rem;
        }
    }
</style>