---

import { Image } from 'astro:assets';
import heroBackground from '../assets/images/background-inicio.jpg';
---
<section id="inicio" class="relative min-h-screen flex items-start justify-center bg-gradient-to-br from-neutral-100 to-neutral-200 overflow-hidden pt-40 md:pt-60">    <!-- Background Image Overlay -->
    <div class="absolute inset-0 bg-black/50">
        <Image
                src={heroBackground}
                alt="Delivery services background"
                class="hero-image brightness-50"
                loading="eager"
                fetchpriority="high"
                format='jpg'
                quality={80}
                widths={[640, 768, 1024, 1280, 1536, 1920]}
                sizes="100vw"
        />
    </div>

    <!-- Background decorative elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 right-10 w-32 h-32 bg-primary-400 rounded-full opacity-20 animate-float"></div>
        <div
                class="absolute bottom-20 left-10 w-24 h-24 bg-secondary-400 rounded-full opacity-20 animate-float"
                style="animation-delay: 1s;"
        ></div>
    </div>

    <!-- Main Content -->
    <div class="relative z-10 container mx-auto px-4 lg:px-8 w-full">
        <div class="max-w-4xl">
            <!-- Hero Text -->
            <header class="animate-fade-in-up mb-6 md:mb-8">
                <p class="hero-subtitle">
                    ENTREGAMOS RÁPIDO, SEGURO Y
                </p>
                <h1 class="hero-title">
                    SIN COMPLICACIONES
                </h1>
            </header>

            <!-- Description -->
            <div class="animate-slide-in-left animation-delay-300 mb-8 md:mb-12">
                <p class="hero-description">
                    Envíos Same Day y Next Day en Lima y Callao desde 6 soles, con seguimiento en tiempo real
                </p>
            </div>

            <!-- CTA Buttons -->
            <div class="cta-buttons animate-slide-in-left animation-delay-500">
                <button class="btn-primary">
                    Cotiza ahora
                </button>
                <button class="btn-secondary">
                    Ver servicios
                </button>
            </div>
        </div>
    </div>

    <!-- Trust Indicator -->
    <footer class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-fade-in animation-delay-700">
        <p class="trust-indicator">
            Más de 50 empresas confían en nosotros cada día.
        </p>
    </footer>
</section>

<style>
    /* Hero Text Styles */
    .hero-subtitle {
        @apply text-white/90 italic font-medium mb-2 md:mb-4 tracking-wide text-shadow-subtitle
        hover:-translate-y-2 hover:scale-105 transition-all duration-500 cursor-pointer;
        font-size: clamp(0.875rem, 2.5vw, 2.25rem);
    }

    .hero-title {
        @apply text-white italic font-display font-black leading-none mb-4 md:mb-8
        transform -skew-x-6 hover:-translate-y-4 hover:scale-105
        transition-all duration-700 cursor-pointer text-shadow-hero whitespace-nowrap;
        font-size: clamp(1.5rem, 8vw, 8rem);
    }

    .hero-description {
        @apply text-white/90 text-lg md:text-xl max-w-md leading-relaxed text-shadow-subtitle;
    }

    /* Button Styles */
    .cta-buttons {
        @apply flex flex-col sm:flex-row gap-4;
    }

    .btn-primary {
        @apply bg-primary-50 hover:bg-primary-600 text-white font-semibold
        px-8 py-4 rounded-xl transition-all duration-300
        transform hover:scale-105 hover:shadow-strong;
    }

    .btn-secondary {
        @apply border-2 border-white/30 hover:border-white text-white font-semibold
        px-8 py-4 rounded-xl transition-all duration-300
        backdrop-blur-sm hover:backdrop-blur-md hover:bg-white/10;
    }

    .trust-indicator {
        @apply text-white/80 text-center text-sm md:text-base font-medium;
    }
</style>