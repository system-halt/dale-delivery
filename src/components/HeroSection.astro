<section id="inicio"
         class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-neutral-100 to-neutral-200 overflow-hidden pt-20">
    <!-- Background Image Overlay -->
    <div class="absolute inset-0 bg-black bg-opacity-20"></div>

    <!-- Background decorative elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-20 right-10 w-32 h-32 bg-primary-400 rounded-full opacity-20 animate-float"></div>
        <div class="absolute bottom-20 left-10 w-24 h-24 bg-secondary-400 rounded-full opacity-20 animate-float"
             style="animation-delay: 1s;"></div>
    </div>

    <div class="container mx-auto px-4 py-20 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Content -->
            <div class="space-y-8 animate-slide-in-left">
                <div class="space-y-4">
                    <p class="text-primary-600 font-medium text-lg">ENTREGAMOS RÁPIDO, SEGURO Y</p>
                    <h1 class="font-display font-bold text-5xl md:text-6xl lg:text-7xl text-neutral-900 leading-tight">
                        SIN COMPLICACIONES
                    </h1>
                </div>

                <p class="text-neutral-600 text-lg max-w-lg">
                    Envíos Same Day y Next Day en Lima y Callao desde 6 soles con seguimiento en tiempo real.
                </p>

                <div class="flex flex-col sm:flex-row gap-4">
                    <button class="bg-primary-500 hover:bg-primary-600 text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-medium">
                        Cotiza ahora
                    </button>
                    <button class="border-2 border-primary-500 text-primary-500 hover:bg-primary-500 hover:text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300">
                        Ver servicios
                    </button>
                </div>

                <p class="text-sm text-neutral-500">
                    Más de 50 empresas confían en nosotros cada día
                </p>
            </div>

            <!-- Image/Vehicle Section -->
            <div class="relative animate-slide-in-right">
                <div class="bg-white rounded-4xl p-8 shadow-strong">
                    <!-- Placeholder for delivery van image -->
                    <div class="aspect-video bg-gradient-to-br from-neutral-200 to-neutral-300 rounded-2xl flex items-center justify-center">
                        <svg class="w-24 h-24 text-neutral-400" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17 8V7c0-2.76-2.24-5-5-5S7 4.24 7 7v1c-1.1 0-2 .9-2 2v8c0 1.1.9 2 2 2h10c1.1 0 2-.9 2-2v-8c0-1.1-.9-2-2-2zM9 7c0-1.66 1.34-3 3-3s3 1.34 3 3v1H9V7zm7 11H8v-6h8v6z"/>
                        </svg>
                    </div>

                    <!-- Delivery person illustration -->
                    <div class="absolute -top-4 -right-4 w-20 h-20 bg-primary-500 rounded-full flex items-center justify-center shadow-medium animate-bounce-subtle">
                        <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1H5C3.9 1 3 1.9 3 3V21C3 22.1 3.9 23 5 23H19C20.1 23 21 22.1 21 21V9Z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>