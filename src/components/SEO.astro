---
import {SITE, SEO as SEO_CONFIG} from "../config/seo";
interface Props {
    title?: string;
    description?: string;
    image?: string;
    keywords?: string;
    url?: string;
}

const {
    title = SEO_CONFIG.defaultTitle,
    description = SEO_CONFIG.defaultDescription,
    image = SITE.defaultImage,
    keywords = SEO_CONFIG.defaultKeywords,
    url = SITE.url,
}: Props = Astro.props;

const schemaData = {
    "@context": "https://schema.org",
    "@type": "Organization",
    name: SITE.name,
    url: url,
    logo: `${SITE.url}${SITE.logo}`,
    description: description,
    foundation: "2020",
    address: {
        "@type": "PostalAddress",
        "addressCountry": "PE",
        "addressLocality": SITE.address,
        "addressRegion": SITE.address,
        "postalCode": SITE.postalCode,
        "streetAddress": SITE.streetAddress
    },
    areaServed: {
        "@type": "Place",
        name: "Latinoam√©rica"
    },
    sameAs: [
        "https://www.facebook.com/daledelivery.pe?locale=es_LA",
        "https://www.instagram.com/daledelivery.pe/",
        "https://www.tiktok.com/@daledelivery"
    ]
};
---
<!-- SEO B√°sico -->
<meta charset="UTF-8"/>
<meta name="description" content={description}/>
<meta name="keywords" content={keywords}/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<link rel="canonical" href={url}/>
<link rel="icon" type="image/svg" href="/favicon.svg" />
<!-- üåç Hreflang para SEO internacional -->
<link rel="alternate" href={SITE.url + "/"}/>


<!-- Open Graph -->
<meta property="og:type" content="website"/>
<meta property="og:title" content={title}/>
<meta property="og:description" content={description}/>
<meta property="og:image" content={image}/>
<meta property="og:url" content={url}/>
<meta property="og:site_name" content="Dale Delivery"/>

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:title" content={title}/>
<meta name="twitter:description" content={description}/>
<meta name="twitter:image" content={image}/>

<!-- Schema.org JSON-LD -->
<script type="application/ld+json" set:html={JSON.stringify(schemaData)} defer is:inline></script>